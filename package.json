{
  "name": "weather-now",
  "version": "0.0.0",
  "description": "Weather Now is a OpenWeatherMap project",
  "scripts": {
    "ng": "ng",
    "ng:update": "ng update @angular/cli @angular/core --allowDirty && npm audit fix",
    "start": "ng serve",
    "start:dist": "npx http-server ./dist/$npm_package_name/",
    "build": "ng build",
    "build:prod": "ng build -c production",
    "test": "ng test",
    "lint": "ng lint",
    "lint:fix": "npm run lint -- --fix=true",
    "lint:sass": "sass-lint -c ./.sass-lint.yml './src/**/*.scss' --verbose --no-exit",
    "lint:sass:fix": "sass-lint-auto-fix",
    "lint:editorconfig": "git ls-files -z | xargs -0 eclint check",
    "lint:editorconfig:fix": "git ls-files -z | xargs -0 eclint fix",
    "e2e": "ng e2e",
    "bundle-analyzer": "npx webpack-bundle-analyzer ./dist/$npm_package_name/stats*.json --mode static --report ./documentation/bundle/index.html",
    "bundle-analyzer:serve": "npx http-server ./documentation/bundle/",
    "compodoc": "compodoc -p ./tsconfig.app.json",
    "compodoc:serve": "npx http-server ./documentation/",
    "sonar:start": "docker run --rm --name sonarqube -p 9000:9000 sonarqube",
    "sonar:stop": "docker stop sonarqube",
    "sonar:scanner": "docker run --rm --network host --mount type=bind,source=\"$(pwd)\",target=/project-root --workdir /project-root magnobiet/sonar-scanner:latest sonar-scanner",
    "storybook:start": "start-storybook --static-dir ./dist/storybook/ --port 6006",
    "storybook:build": "build-storybook --output-dir ./dist/storybook/",
    "changelog": "npx conventional-changelog-cli -p angular -i CHANGELOG.md -s",
    "postinstall": "ngcc"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~9.0.0",
    "@angular/common": "~9.0.0",
    "@angular/compiler": "~9.0.0",
    "@angular/core": "~9.0.0",
    "@angular/forms": "~9.0.0",
    "@angular/platform-browser": "~9.0.0",
    "@angular/platform-browser-dynamic": "~9.0.0",
    "@angular/router": "~9.0.0",
    "rxjs": "~6.5.4",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.900.1",
    "@angular/cli": "~9.0.1",
    "@angular/compiler-cli": "~9.0.0",
    "@angular/language-service": "~9.0.0",
    "@babel/core": "^7.8.4",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@compodoc/compodoc": "^1.1.11",
    "@storybook/addon-actions": "^5.3.12",
    "@storybook/addon-links": "^5.3.12",
    "@storybook/addon-notes": "^5.3.12",
    "@storybook/addons": "^5.3.12",
    "@storybook/angular": "^5.3.12",
    "@types/jasmine": "~3.5.3",
    "@types/jasminewd2": "~2.0.8",
    "@types/node": "^13.7.0",
    "babel-loader": "^8.0.6",
    "codelyzer": "^5.2.1",
    "eclint": "^2.8.1",
    "husky": "^4.2.1",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.4.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.1",
    "karma-jasmine": "~3.1.0",
    "karma-jasmine-html-reporter": "^1.5.2",
    "lint-staged": "^10.0.7",
    "protractor": "~5.4.3",
    "sass-lint": "^1.13.1",
    "sass-lint-auto-fix": "^0.21.0",
    "ts-node": "~8.6.2",
    "tslint": "^6.0.0",
    "typescript": "~3.7.5"
  }
}
